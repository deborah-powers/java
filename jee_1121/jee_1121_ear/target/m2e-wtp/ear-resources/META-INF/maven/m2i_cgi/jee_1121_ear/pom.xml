<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>m2i_cgi</groupId>
		<artifactId>jee_1121</artifactId>
		<version>1.0</version>
	</parent>
	<artifactId>jee_1121_ear</artifactId>
	<packaging>ear</packaging>
	<dependencies>
		<dependency>
			<groupId>m2i_cgi</groupId>
			<artifactId>jee_1121_ejb</artifactId>
			<version>1.0</version>
			<type>ejb</type><!-- type=ejb plutot que type=jar si ejbModule dans configuration du plugin ear -->
		</dependency>
		<dependency>
			<groupId>m2i_cgi</groupId>
			<artifactId>jee_1121_web</artifactId>
			<version>1.0</version>
			<type>war</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>3.0.1</version>
				<configuration>
					<generateApplicationXml>true</generateApplicationXml>
					<includeJar>false</includeJar>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<webModule>
							<groupId>m2i_cgi</groupId>
							<artifactId>jee_1121_web</artifactId>
							<contextRoot>jee_1121_web</contextRoot>
							<bundleFileName>jee_1121_web.war</bundleFileName>
						</webModule>
						<ejbModule>
							<groupId>m2i_cgi</groupId>
							<artifactId>jee_1121_ejb</artifactId>
							<bundleFileName>jee_1121_ejb.jar</bundleFileName>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>